<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutGimnasios"
    android:layout_marginTop="15dp"
   >

    <RelativeLayout
        android:id="@+id/cgPart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView2"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/jim"
            app:strokeColor="@null"/>
    </RelativeLayout>

    <View
        android:id="@+id/cgAlignView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_height="150dp"
        android:layout_width="0dp"
        >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cgAlignView"

        android:background="@drawable/backgroundcornerinverted">

        <View
            android:id="@+id/cgAlignView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            >
        </View>

        <RelativeLayout
            android:id="@+id/cgP1"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@id/cgAlignView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SubName"
                style="@style/sucursalesgod"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La calma"
                android:layout_marginTop="20dp"
                android:textColor="@color/bottomNavigationBackground"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cgP2"
            android:layout_toEndOf="@id/cgAlignView2"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Location"
                style="@style/viewParent.headerText.homeCardContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Av. La Calma, esq. Calle Casiopea 4481, Col. La Calma 45070. Guadalajara, Jalisco"
                android:textColor="@color/bottomNavigationBackground"
                android:textSize="20dp" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progress="@integer/material_motion_duration_long_2"
            android:progressTint="@color/colorIdentidad2"
            android:secondaryProgressTint="@color/colorIdentidad2"
            android:rating="5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>