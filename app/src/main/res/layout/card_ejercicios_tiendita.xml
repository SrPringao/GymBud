<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/CVEParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/backgroundcorner">

    <TextView
        android:id="@+id/CVET1"
        android:layout_width="match_parent"
        android:fontFamily="@font/lato_light"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:text="Curl Concentrado"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/CVESeparador"
        android:layout_below="@id/CVET1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/bottomNavigationTintColor"/>


    <RelativeLayout
        android:id="@+id/CVEParent2"
        android:layout_width="match_parent"
        android:layout_below="@id/CVESeparador"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/CVET2"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingHorizontal="10dp"
            android:layout_toStartOf="@id/CVEBotonAgregar"
            android:paddingTop="10dp"
            android:text="El enfoque de este ejercicio es la cabeza corta del bicep, y la larga te la tragas, porque sabe que yo vengo panto panto"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/CVEBotonAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundcornerinverted"
            android:text="+"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>


</RelativeLayout>