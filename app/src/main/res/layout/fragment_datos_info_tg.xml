<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    style="@style/parent.contentLayout"
    android:background="@drawable/backgrounblack"
    tools:context=".DatosInfoPersonal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="23dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <RelativeLayout
            android:background="@drawable/backgroundcorner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:padding="10dp"
            gl:end_color="@color/colorIdentidad6"
            gl:orientation="LEFT_RIGHT"
            gl:start_color="@color/colorIdentidad5">

            <TextView
                android:id="@+id/textViewSub1Title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                style="@style/viewParent.headerText.HomeCardTitle"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:text="Calcular tasa de grasa" />

            <EditText
                android:id="@+id/etInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType=""
                android:layout_marginBottom="20dp"
                android:hint="Sexo">

            </EditText>

            <EditText
                android:id="@+id/etInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etInfo1"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:layout_marginEnd="20dp"
                android:hint="Edad">


            </EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etInfo2"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/background_forget_password"
                android:text="boton"
                android:textColor="@color/colorIdentidad6">

            </Button>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>