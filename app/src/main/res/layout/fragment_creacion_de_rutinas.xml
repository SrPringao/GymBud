<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounblack">

    <ImageView
        android:id="@+id/TBButtonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_flechanegrodorado" />

    <ImageView
        android:id="@+id/TBlogoTienda"
        android:layout_alignTop="@+id/TBButtonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/icrutinas2" />

<RelativeLayout
    android:layout_marginTop="15dp"
    android:layout_toStartOf="@+id/TBlogoTienda"
    android:layout_alignTop="@+id/TBButtonBack"
    android:layout_marginEnd="2dp"
    android:background="@drawable/background_numeroejercicios"
    android:layout_width="20dp"
    android:layout_height="20dp">

    <TextView
        android:id="@+id/CRNumero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white" />

</RelativeLayout>

    <TextView
        android:id="@+id/textoCR1"
        android:layout_width="wrap_content"
        android:layout_below="@id/TBButtonBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lato"
        android:text="Creacion de rutinas\nPersonalizadas"
        android:textAlignment="center"
        android:textColor="@color/bottomNavigationTintColor"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/textoCR2"
        android:layout_width="wrap_content"
        android:layout_below="@id/textoCR1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lato"
        android:text="Selecciona el grupo \nmuscular"
        android:textAlignment="center"
        android:textColor="@color/bottomNavigationTintColor"
        android:textSize="30sp"
        android:layout_height="wrap_content">
    </TextView>

    <Spinner
        android:id="@+id/CRSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoCR2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:dropDownVerticalOffset="70dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/CRButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/backgroundcornerinverted"
        android:text="Confirmar seleccion"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true">

    </Button>

</RelativeLayout>