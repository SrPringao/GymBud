<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/TiLayoutEjercicio"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/backgroundcorner">

    <RelativeLayout
        android:id="@+id/TiPart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/TiNombreEjercicio"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toStartOf="@+id/TiClearIcon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Elevaciones laterales de pie con mancuernas "
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/TiClearIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"

            android:layout_alignParentEnd="true"
            android:src="@drawable/clear_icon">
        </ImageView>
    </RelativeLayout>

    <View
        android:id="@+id/TiSeparador"
        android:layout_below="@id/TiPart1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_edittext"/>

    <RelativeLayout
        android:id="@+id/TiPart2"
        android:layout_below="@+id/TiSeparador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/TiSeries"
            style="@style/viewParent.headerText.homeCardContent"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:text="4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/TiX"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/TiX"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="x"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TiRepes"
            android:textSize="30sp"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:text="10"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/TiX"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>

</RelativeLayout>