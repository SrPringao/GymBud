<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounblack"
    android:padding="20dp"
    tools:context=".Modulos.CreacionDeRutinas.RutinasAutomaticas.Encuesta">

    <ImageView
        android:id="@+id/EfeButtonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_flechanegrodorado" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/backgroundcorner"
        android:padding="20dp">


        <TextView
            android:id="@+id/EFePregunta"
            style="@style/viewParent.headerText.HomeCardTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="EFePregunta"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/EFeRespuesta1"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_below="@id/EFePregunta"
            android:fontFamily="@font/lato"
            android:text="Respuesta 1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/EFeRespuesta2"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_below="@id/EFeRespuesta1"
            android:fontFamily="@font/lato"
            android:text="Respuesta 2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/EFeRespuesta3"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_below="@id/EFeRespuesta2"
            android:fontFamily="@font/lato"
            android:text="Respuesta 3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/EFeRespuesta4"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_below="@id/EFeRespuesta3"
            android:fontFamily="@font/lato"
            android:text="Respuesta 4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/EFeAcepto"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EFeRespuesta4"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="10dp"

            android:background="@drawable/backgroundcornerinverted"
            android:padding="20dp"
            android:text="Confirmar"
            android:textColor="@color/colorIdentidad6" />

    </RelativeLayout>
</RelativeLayout>