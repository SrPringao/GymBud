<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/TiLayoutEjercicio"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/backgroundcornerinverted">

    <RelativeLayout
        android:id="@+id/VRCardPart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/VRCardNombreEjercicio"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Elevaciones laterales de pie con mancuernas "
            android:textColor="@color/bottomNavigationBackground"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/VRCardGrupoMuscular"
            android:fontFamily="@font/lato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"


            android:layout_alignStart="@+id/VRCardNombreEjercicio"
            android:layout_below="@+id/VRCardNombreEjercicio"
            android:gravity="left"
            android:text="Grupo muscular: Hombro"
            android:textColor="@color/bottomNavigationTintColor"
            android:textSize="15dp" />

    </RelativeLayout>




    <View
        android:id="@+id/VRCardSeparador"
        android:layout_below="@id/VRCardPart1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_edittext"/>

    <RelativeLayout
        android:id="@+id/TiPart2"
        android:layout_below="@+id/VRCardSeparador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/VRCardSeries"
            style="@style/viewParent.headerText.homeCardContent"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:text="4"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/VRCardX"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/VRCardX"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/bottomNavigationBackground"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/VRCardRepes"
            android:textSize="30sp"
            android:textColor="@color/white"
            style="@style/viewParent.headerText.homeCardContent"
            android:layout_width="wrap_content"
            android:text="10"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/VRCardX"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>

</RelativeLayout>